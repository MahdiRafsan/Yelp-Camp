<% layout("layouts/boilerplate") %>
<div class="row mt-3">
    <div class="card col-md-6 offset-md-3">
        <form action="/campgrounds" method="post" class="form-group form-validation" enctype="multipart/form-data" novalidate>
            <fieldset>
                <legend class="text-center border-bottom">Enter campground info</legend>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="title" id="title" placeholder="Name" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="location" id="location" placeholder="City, State" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <div class="input-group">
                        <span id="price-label" class="input-group-text">$</span>
                        <input type="text" id="price" name="price" class="form-control" placeholder="0.00" aria-label="price-label" aria-describedby="price-label" required>
                        <div class="invalid-feedback">Please enter a price for the campground!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Add Image(s)...</label>
                    <input type="file" name="image" id="image" class="form-control" multiple>
                    <!-- <div class="invalid-feedback">Please choose an image file!</div> -->
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea id="description" name="description" rows="3" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please enter a small description about the campground!</div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add New Campground</button> 
                </div>
            </fieldset>        
        </form>
    </div>
</div>


